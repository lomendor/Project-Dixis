{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "type-check": "tsc --noEmit --skipLibCheck",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:ci": "npm run e2e:ci:setup && playwright test",
    "e2e:ci:setup": "rm -rf frontend/.next && NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8001/api/v1 npm run build && npm start -- --port 3001 & npx wait-on tcp:127.0.0.1:3001 && sleep 2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:analytics": "PLAYWRIGHT_BASE_URL=http://localhost:3001 playwright test tests/e2e/analytics-observability.spec.ts",
    "test:e2e:performance-a11y": "PLAYWRIGHT_SKIP_WEBSERVER=true playwright test tests/e2e/performance-accessibility-core.spec.ts --reporter=line",
    "test:e2e:seo": "PLAYWRIGHT_SKIP_WEBSERVER=true playwright test tests/e2e/seo-basics.spec.ts --reporter=line",
    "dev:e2e": "next dev -p 3001 || vite --port 3001",
    "dev:api": "php -S 127.0.0.1:8001 -t ../public",
    "api:e2e": "php ../artisan serve --host 127.0.0.1 --port 8001",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "tsc -p tsconfig.json --noEmit"
    ]
  }
}
