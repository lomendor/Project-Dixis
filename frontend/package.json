{
  "name": "frontend",
  "version": "0.1.0-rc.1",
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "clean": "rimraf .next && rimraf node_modules/.cache || true",
    "dev:clean": "npm run clean:cache && npm run dev",
    "build": "next build",
    "start": "next start",
    "start:ci": "next start -p 3000",
    "mock:api": "node ../scripts/mock-api/lhci-mock.cjs",
    "prisma:gen": "prisma generate --schema=./prisma/schema.prisma",
    "db:gen": "prisma generate",
    "db:mig": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force && tsx prisma/seed.ts",
    "db:seed": "tsx prisma/seed.ts",
    "notify:deliver": "curl -s -X POST http://127.0.0.1:3000/api/dev/notifications/deliver || true",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"tests/**/*.{js,jsx,ts,tsx,json}\" \"*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"tests/**/*.{js,jsx,ts,tsx,json}\" \"*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:strict": "tsc --noEmit",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "qa:types": "tsc --noEmit",
    "qa:lint": "eslint . --max-warnings=10000",
    "qa:knip": "knip --max-issues=0",
    "qa:deps": "depcheck",
    "qa:size": "size-limit",
    "qa:all": "npm run qa:types && npm run qa:lint && ((git branch --show-current 2>/dev/null || echo \"${GITHUB_HEAD_REF:-unknown}\") | grep -qE '^(ci|chore)/' && echo 'ℹ️ Skipping knip/deps/size on hotfix branch' || (npm run qa:knip && npm run qa:deps && npm run qa:size))",
    "lhci": "lhci autorun",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "test:shipping": "vitest run tests/unit/shipping-calculator.spec.ts",
    "test:checkout": "vitest run tests/unit/checkout-shipping-updates.spec.tsx tests/unit/checkout-error-handling.spec.tsx",
    "test:gdpr": "vitest run tests/unit/gdpr-dsr.spec.ts",
    "test:execution-issues": "npm run test:shipping && npm run test:checkout && npm run test:gdpr",
    "e2e": "playwright test",
    "ci:db": "npx prisma db push --accept-data-loss",
    "ci:gen": "npx prisma generate",
    "build:ci": "next build",
    "test:e2e:ci": "dotenv -e .env.ci -- playwright test --reporter=line",
    "pree2e:smoke": "node -e \"const p=process.cwd(); if(!p.includes('Project-Dixis/frontend')){console.error('❌ Wrong workspace:',p); process.exit(1)}\"",
    "e2e:smoke": "playwright test tests/e2e/smoke.spec.ts tests/e2e/e3-docs-smoke.spec.ts",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:ci": "npm run e2e:ci:setup && playwright test",
    "e2e:ci:setup": "rm -rf frontend/.next && NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8001/api/v1 npm run build && npm start -- --port 3000 & npx wait-on tcp:127.0.0.1:3000 && sleep 2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:analytics": "PLAYWRIGHT_BASE_URL=http://localhost:3000 playwright test tests/e2e/analytics-observability.spec.ts",
    "test:e2e:performance-a11y": "PLAYWRIGHT_SKIP_WEBSERVER=true playwright test tests/e2e/performance-accessibility-core.spec.ts --reporter=line",
    "test:e2e:seo": "PLAYWRIGHT_SKIP_WEBSERVER=true playwright test tests/e2e/seo-basics.spec.ts --reporter=line",
    "e2e:prep:state": "node tests/e2e/setup/save-storage-state.ts",
    "e2e:local": "playwright test --config=playwright.local.ts",
    "e2e:local:ui": "playwright test --config=playwright.local.ts --ui",
    "e2e:checkout": "playwright test --config=playwright.local.ts --project=checkout-flow",
    "e2e:clean": "rm -rf tests/e2e/.artifacts && rm -rf test-results && rm -rf playwright-report",
    "dev:e2e": "next dev -p 3000 || vite --port 3000",
    "dev:api": "php -S 127.0.0.1:8001 -t ../public",
    "api:e2e": "php ../artisan serve --host 127.0.0.1 --port 8001",
    "prepare": "husky",
    "agent:limit-scan": "node scripts/limit-scan.js",
    "subagent:codemap": "node scripts/codemap-subagent.js",
    "sub:auditor": "bash ../scripts/subagents.sh audit",
    "sub:test-guardian": "bash ../scripts/subagents.sh tests",
    "sub:scribe": "bash ../scripts/subagents.sh docs",
    "sub:release": "bash ../scripts/subagents.sh release",
    "sub:all": "bash ../scripts/subagents.sh all",
    "qa:smoke": "npm run type-check && npm run build && npm run e2e:smoke",
    "oom:node": "cross-env NODE_OPTIONS=--max-old-space-size=4096 node -v",
    "clean:next": "rm -rf .next",
    "clean:cache": "rm -rf node_modules/.cache .next",
    "clean:all": "rm -rf node_modules/.cache .next test-results playwright-report",
    "lint:ci": "eslint . -c .eslintrc.ci.mjs",
    "qa:lint:ci": "npm run lint:ci",
    "qa:all:ci": "npm run qa:types && npm run lint:ci",
    "test:api": "node tests/e2e/test-api-server.js",
    "agent:routes": "node ../scripts/scan-routes.mjs",
    "agent:schema": "node ../scripts/scan-prisma.mjs",
    "agent:docs": "npm run agent:routes && npm run agent:schema"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@prisma/client": "^6.16.3",
    "@stripe/react-stripe-js": "^3.1.0",
    "@stripe/stripe-js": "^4.8.0",
    "chart.js": "^4.5.0",
    "next": "15.5.0",
    "next-intl": "^4.3.9",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.55.0",
    "@size-limit/preset-app": "^11.1.4",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "danger": "^11.3.1",
    "depcheck": "^1.4.7",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.27.2",
    "lint-staged": "^16.1.5",
    "msw": "^2.11.3",
    "prettier": "^3.6.2",
    "prisma": "6.16.3",
    "size-limit": "^11.1.4",
    "tailwindcss": "^4",
    "ts-prune": "^0.10.3",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "ciKey": "2025-09-19a"
}
