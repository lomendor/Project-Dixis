{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "clean": "rimraf .next && rimraf node_modules/.cache || true",
    "dev:clean": "npm run clean && npm run dev",
    "build": "next build",
    "start": "next start",
    "start:ci": "next start -p 3030",
    "mock:api": "node ../scripts/mock-api/lhci-mock.cjs",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"tests/**/*.{js,jsx,ts,tsx,json}\" \"*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"tests/**/*.{js,jsx,ts,tsx,json}\" \"*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:strict": "tsc --noEmit",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "qa:types": "tsc --noEmit",
    "qa:lint": "eslint . --max-warnings=10000",
    "qa:knip": "knip --fail-on=issues",
    "qa:deps": "depcheck",
    "qa:size": "size-limit",
    "qa:all": "npm run qa:types && npm run qa:lint && ((git branch --show-current 2>/dev/null || echo \"${GITHUB_HEAD_REF:-unknown}\") | grep -qE '^(ci|chore)/' && echo 'ℹ️ Skipping knip/deps/size on hotfix branch' || (npm run qa:knip && npm run qa:deps && npm run qa:size))",
    "lhci": "lhci autorun",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "e2e": "playwright test",
    "test:e2e:ci": "playwright test --reporter=github ${QUARANTINE_REGEX:+--grep-invert \\\"${QUARANTINE_REGEX}\\\"}",
    "pree2e:smoke": "node -e \"const p=process.cwd(); if(!p.includes('Project-Dixis/frontend')){console.error('❌ Wrong workspace:',p); process.exit(1)}\"",
    "e2e:smoke": "playwright test tests/e2e/smoke.spec.ts tests/e2e/e3-docs-smoke.spec.ts",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:ci": "npm run e2e:ci:setup && playwright test",
    "e2e:ci:setup": "rm -rf frontend/.next && NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8001/api/v1 npm run build && npm start -- --port 3030 & npx wait-on tcp:127.0.0.1:3030 && sleep 2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:analytics": "PLAYWRIGHT_BASE_URL=http://localhost:3001 playwright test tests/e2e/analytics-observability.spec.ts",
    "test:e2e:performance-a11y": "PLAYWRIGHT_SKIP_WEBSERVER=true playwright test tests/e2e/performance-accessibility-core.spec.ts --reporter=line",
    "test:e2e:seo": "PLAYWRIGHT_SKIP_WEBSERVER=true playwright test tests/e2e/seo-basics.spec.ts --reporter=line",
    "e2e:prep:state": "node tests/e2e/setup/save-storage-state.ts",
    "e2e:local": "playwright test --config=playwright.local.ts",
    "e2e:local:ui": "playwright test --config=playwright.local.ts --ui",
    "e2e:checkout": "playwright test --config=playwright.local.ts --project=checkout-flow",
    "e2e:clean": "rm -rf tests/e2e/.artifacts && rm -rf test-results && rm -rf playwright-report",
    "dev:e2e": "next dev -p 3001 || vite --port 3001",
    "dev:api": "php -S 127.0.0.1:8001 -t ../public",
    "api:e2e": "php ../artisan serve --host 127.0.0.1 --port 8001",
    "prepare": "husky",
    "agent:limit-scan": "node scripts/limit-scan.js",
    "subagent:codemap": "node scripts/codemap-subagent.js",
    "sub:auditor": "bash ../scripts/subagents.sh audit",
    "sub:test-guardian": "bash ../scripts/subagents.sh tests",
    "sub:scribe": "bash ../scripts/subagents.sh docs",
    "sub:release": "bash ../scripts/subagents.sh release",
    "sub:all": "bash ../scripts/subagents.sh all",
    "qa:smoke": "npm run type-check && npm run build && npm run e2e:smoke",
    "oom:node": "cross-env NODE_OPTIONS=--max-old-space-size=4096 node -v",
    "clean:next": "rm -rf .next",
    "clean:cache": "rm -rf node_modules/.cache .next",
    "clean:all": "rm -rf node_modules/.cache .next test-results playwright-report",
    "dev:clean": "npm run clean:cache && npm run dev"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^3.1.0",
    "@stripe/stripe-js": "^4.8.0",
    "chart.js": "^4.5.0",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.55.0",
    "@size-limit/preset-app": "^11.1.4",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.0.2",
    "cross-env": "^7.0.3",
    "danger": "^11.3.1",
    "depcheck": "^1.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.27.2",
    "lint-staged": "^16.1.5",
    "msw": "^2.11.1",
    "prettier": "^3.6.2",
    "size-limit": "^11.1.4",
    "tailwindcss": "^4",
    "ts-prune": "^0.10.3",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "ciKey": "2025-09-19a"
}
