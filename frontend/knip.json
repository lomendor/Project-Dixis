{
  "workspaces": {
    ".": {
      "entry": [
        "src/app/**/*.{ts,tsx}",
        "src/pages/**/*.{ts,tsx}",
        "src/components/**/*.{ts,tsx}",
        "tests/e2e/**/*.{ts,tsx}",
        "next.config.js",
        "playwright.config.ts",
        "tailwind.config.js",
        "vitest.config.ts"
      ],
      "project": [
        "src/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}"
      ],
      "ignore": [
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/node_modules/**",
        "**/.next/**",
        "**/dist/**",
        "**/coverage/**"
      ],
      "ignoreDependencies": [
        "@types/*",
        "eslint-*",
        "prettier",
        "husky",
        "lint-staged"
      ]
    }
  },
  "include": [],
  "exclude": ["devDependencies", "files", "dependencies", "unlisted"]
}